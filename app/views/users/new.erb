<% if @errors %>
  <div class="errors-wrapper">
    <span>Something went wrong:</span>
    <ul class="errors">
      <% @errors.each do |error| %>
        <li class="error"><%= error %></li>
      <% end %>
    </ul>
<% end %>

<form action="/users" method="post">
  <label for="new_username">Username</label>
  <input id="new_username" name="user[username]" type="text" value="<%= @user.try(:username)%>">

  <label for="new_email">Email</label>
  <input id="new_email" name="user[email]" type="text" value="<%= @user.try(:email)%>">

  <label for="new_password">Password</label>
  <input id="new_password" name="user[password]" type="password">

  <label for="new_status">status</label>
  <input id="new_status" name="user[status]" type="text" value="<%= @user.try(:status)%>">

  <input type="submit" value="Register">
</form>

